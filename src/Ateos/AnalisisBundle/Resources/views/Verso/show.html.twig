{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Verso</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Capitulo</th>
                <td>{{ entity.capitulo }}</td>
            </tr>
            <tr>
                <th>Verso</th>
                <td>{{ entity.verso }}</td>
            </tr>
            <tr>
                <th>Texto</th>
                <td>{{ entity.texto }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('verso') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('verso_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
